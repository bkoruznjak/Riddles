<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/riddle_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <!-- Dummy content. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonShowAnwser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_anwser_button"
            android:text="@string/button_show_anwser" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkBox_toggle_favorite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_riddle" />

            <CheckBox
                android:id="@+id/checkBox_toggle_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextSwitcher
            android:id="@+id/textSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
